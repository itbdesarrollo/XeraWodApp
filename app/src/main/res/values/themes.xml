<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.XeraWodApp" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/clr_fondo_chulo</item>
        <item name="colorPrimaryVariant">@color/black</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/clr_opacity</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->

    </style>
    <!-- Controles de acción de app -->
    <style name="Theme.XeraWodApp.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="Theme.XeraWodApp.AppBarOverlay" parent="ThemeOverlay.AppCompat.ActionBar" />
    <style name="Theme.XeraWodApp.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <!-- Estilo para el Splash Screen. Le doy nombre y le digo que hereda del tema padre -->
    <style name="SplashTheme" parent="Theme.XeraWodApp">
        <!-- Primary brand color. Defino donde debe aplicar el estilo -->
        <item name="android:windowBackground">@drawable/drw_splashscreen</item>

    </style>
    <!-- Estilo para el Toolbar auxiliar. Le doy nombre y le digo que hereda del tema padre -->
    <style name="ToolbarTheme" parent="ThemeOverlay.AppCompat.ActionBar">
        <!-- item para agregar icono volver -->
        <item name="colorControlNormal">@color/clr_opacity</item>
        <!-- item controlar color del texto título del toolbar-->
        <item name="titleTextColor">@color/black</item>
    </style>

</resources>